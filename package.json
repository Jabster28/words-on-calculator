{
  "name": "electron-boilerplate",
  "productName": "Words On Calculator",
  "description": "Put some words on a calculator!",
  "version": "1.0.0a",
  "repository": {
    "type": "git",
    "url": "https://github.com/Jabster28/words-on-calculator"
  },
  "private": true,
  "author": "Jabster28 <justynboyer@gmail.com>",
  "copyright": "Â© 2019, Justyn Boyer.",
  "main": "app/background.js",
  "build": {
    "appId": "com.jabster28.words-on-calculator",
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "publish": [
      "github"
    ]
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "preunit": "webpack --config=build/webpack.unit.config.js --env=test --display=none",
    "unit": "electron-mocha temp/specs.js --renderer --require source-map-support/register",
    "pree2e": "webpack --config=build/webpack.app.config.js --env=test --display=none && webpack --config=build/webpack.e2e.config.js --env=test --display=none",
    "e2e": "mocha temp/e2e.js --timeout 30000 --require source-map-support/register",
    "test": "eslint . --ignore-path .eslintignore",
    "start": "node build/start.js",
    "release": "npm test && webpack --config=build/webpack.app.config.js --env=production && electron-builder"
  },
  "dependencies": {
    "babel-eslint": "^10.0.3",
    "fs-jetpack": "^2.1.0",
    "jquery": "^3.4.1",
    "materialize-css": "^1.0.0-rc.2"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "babel-loader": "^8.0.0-beta.4",
    "chai": "^4.1.0",
    "css-loader": "^3.1.0",
    "electron": "^7.1.7",
    "electron-builder": "^21.1.5",
    "electron-is-dev": "^1.1.0",
    "electron-mocha": "^8.1.1",
    "elemon": "^5.0.3",
    "eslint": "^6.8.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "mocha": "^7.0.1",
    "source-map-support": "^0.5.6",
    "spectron": "^9.0.0",
    "style-loader": "^1.1.1",
    "webpack": "^4.38.0",
    "webpack-cli": "^3.3.6",
    "webpack-merge": "^4.1.3",
    "webpack-node-externals": "^1.7.2"
  }
}
